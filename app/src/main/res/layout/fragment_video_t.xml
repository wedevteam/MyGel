<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".VideoTFragment">

    <RelativeLayout

        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="150sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/immaginep"
            android:layout_toStartOf="@id/immaginep"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/tipop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/acquaclick_4_0"
                android:textAlignment="textEnd"
                android:textColor="@color/rossot"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sottotipop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Guarda come si installa in poche operazioni e come sia facile usarla"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <ImageView
            android:id="@+id/immaginep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="20sp"
            android:src="@drawable/video1" />

    </RelativeLayout>
    <!-- adding VideoView to the layout -->
    <VideoView
        android:visibility="gone"
        android:id="@+id/videov"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>