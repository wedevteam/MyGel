<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.AccediFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:textAlignment="center"
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text"
        android:textAlignment="center"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descrapp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollablespace">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginBottom="10sp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="I tuoi prodotti GEL"
                android:layout_marginBottom="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Non hai ancora prodotti GEL attivati.\nInizia la configurazione"
                android:layout_marginBottom="20sp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/aggiungi"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_above="@+id/registratiskip"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="20sp"
                android:backgroundTint="@color/button"
                android:text="@string/aggiungiprodotto"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="4sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/layoutschedeprodotto">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:backgroundTint="#d7dfe4"
                    app:cardCornerRadius="16sp"
                    android:layout_margin="20sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#d7dfe4"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:text="Acqua Click"
                        android:layout_marginTop="16sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dettagli"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_above="@+id/registratiskip"
                        android:layout_marginStart="40sp"
                        android:layout_marginTop="50sp"
                        android:layout_marginEnd="40sp"
                        android:backgroundTint="#7e8b93"
                        android:text="@string/vedidettagli"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:cornerRadius="8sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>