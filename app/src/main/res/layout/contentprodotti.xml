<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/layoutschedeprodotto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:backgroundTint="#d7dfe4"
            app:cardCornerRadius="16sp"
            android:layout_marginBottom="20sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#d7dfe4"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/nome"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="Acqua Click"
                android:layout_marginTop="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dettagli"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_above="@+id/registratiskip"
                android:layout_marginStart="40sp"
                android:layout_marginTop="50sp"
                android:layout_marginEnd="40sp"
                android:backgroundTint="#7e8b93"
                android:text="@string/vedidettagli"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="8sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>